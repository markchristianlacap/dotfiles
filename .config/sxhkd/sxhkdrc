# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# open browser
super + shift + p
	firefox

# open vscode
super + v
	code

# power menu
super + shift + s
	sh $HOME/.scripts/powermenu.sh

# screenshot
Print
	flameshot gui

# open mixer
super + n
	pavucontrol

# open file manager
super + e
	thunar

# lock screen
alt + l
	slock

# increase volume using amixer 
XF86AudioRaiseVolume
	amixer -q sset Master 5%+

# decrease volume using amixer
XF86AudioLowerVolume
	amixer -q sset Master 5%-

# mute volume using amixer
XF86AudioMute
	amixer -q sset Master toggle

# open bluetooth manager  
super + shift + b
  blueman-manager	

# open mail client
super + shift + m
	thunderbird

# open tmux on st 
super + shift + t
	st -T "st-float" -e tmux new-session -A -s main
